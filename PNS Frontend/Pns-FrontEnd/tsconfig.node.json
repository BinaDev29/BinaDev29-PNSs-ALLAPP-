// ./tsconfig.node.json
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "target": "ESNext",
    "types": ["node"] // የ Node.js types እዚህ ይካተታሉ
  },
  "include": ["vite.config.ts"] // ወይም ሌሎች Node.js-specific files
}